// Meysam Aghighi

//#include <cstdio>
#include <algorithm>
#include <iostream>
using namespace std;

int T,k,n,best;
int x[20],y[20];
int minx[20],miny[20],maxx[20],mxy[20];

void solve(int i, int marked, int cur){
    if (marked<=k && cur<=best){
        if (i == n){
            best = min(best,cur);
        }
        else{
            for (int j=0; j<=marked; ++j){
                int ominx=minx[j],ominy=miny[j],omaxx=maxx[j],omxy=mxy[j];
                minx[j]=min(minx[j],x[i]);
                miny[j]=min(miny[j],y[i]);
                maxx[j]=max(maxx[j],x[i]);
                mxy[j]=max(mxy[j],y[i]);
                solve(i+1,max(marked,j+1),max(cur,max(maxx[j]-minx[j],mxy[j]-miny[j])));
                minx[j]=ominx,miny[j]=ominy,maxx[j]=omaxx,mxy[j]=omxy;
            }
        }
    }
}

int main(){
    cin >> T;
    for (int ii=0; ii<T; ii++){
        cin >> n >> k;
        for (int i=0; i<n; i++)
            cin >> x[i] >> y[i];
        for (int i=0; i<20; i++)
            minx[i] = miny[i] = 100000,
            maxx[i] = mxy[i] = -1;
        best = 100000;
        solve(0,0,0);
        cout << "Case #" << ii+1 << ": " << best << endl;
//        printf("Case #%d: %d\n",ii+1,best);
    }
    return 0;
}
