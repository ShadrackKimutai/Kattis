// Meysam Aghighi

#include <iostream>
#include <vector>
#include <queue>
#include <cstring>
using namespace std;

const int INF = 20000000;

struct edge{
	int to, weight;
	edge(){}
	edge(int _to, int _weight){
		to = _to;
		weight = _weight;
	}
	bool operator < (edge e) const {
		return weight > e.weight;
	}
};

int n,m,q,s,u,v,w;
edge e,f;

int main(){
	while (cin>>n>>m>>q>>s && n){
		vector <edge> adjlist[n];
		for (int i=0;i<m;i++) cin >> u >> v >> w, adjlist[u].push_back(edge(v,w));
		// Dijkstra's Algorithm
		int dist[n];
		bool marked[n];
		memset(marked, false, sizeof(marked));
		priority_queue <edge> meysam;
		for (int i=0;i<n;i++) if (i!=s) dist[i] = INF, meysam.push(edge(i,dist[i]));
		meysam.push(make_pair(s,dist[s]=0));
		while (!meysam.empty()){
			u = meysam.top().to;
			w = meysam.top().weight;
			meysam.pop();
//			u = e.to;
//			cout << v << " " << w << endl;
			if (marked[u]) continue;
			marked[u] = true;
			for (int i=0;i<adjlist[u].size();i++){ // adjlist[v][i] = edge to the i-th neighbor of v
				f = adjlist[u][i];
				if (!marked[f.to] && dist[u] + f.weight < dist[f.to]){ // d = dist[u] ?
					dist[f.to] = dist[u] + f.weight;
					meysam.push(make_pair(f.to,dist[f.to]));
				}
			}
		}
		for (int i=0;i<q;i++){
			cin >> u;
			if (dist[u] == INF) cout << "Impossible" << endl;
			else cout << dist[u] << endl;
		}
		cout << endl;
	}
	return 0;
}


