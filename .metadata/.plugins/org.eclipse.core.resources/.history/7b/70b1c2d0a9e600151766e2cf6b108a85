import java.math.BigInteger;
import java.util.Scanner;


public class j {
	public static void main(String[] args) {
		int T;
		int a,m,b,n;
		Scanner in = new Scanner(System.in);
		T = in.nextInt();
		while (T>0){
			T--;
			a = in.nextInt() , n = in.nextInt() , b = in.nextInt() , m = in.nextInt();
//			cin >> a >> n >> b >> m;
			BigInteger K = n*m;
			BigInteger x = (a*m*mod_inv(m,n))%K;
			x += (b*n*mod_inv(n,m))%K;
			System.out.println(x + " " + K);
//			cout << x << " " << K << endl;
		}		
		
	}
}
