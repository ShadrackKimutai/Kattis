#include <iostream>
#include <vector>
#include <queue>
using namespace std;

const int INF = 20000000;

int main(){
	int n,m,q,s,u,v,w;
	while (cin>>n>>m>>q>>s && n){
		vector < pair<int,int> > adjlist[n];
		for (int i=0;i<m;i++) cin >> u >> v >> w, adjlist[u].push_back(make_pair(v,w));
		int dist[n];
		for (int i=0;i<n;i++) dist[i] = INF;
		queue <int> meysam;
//		bfs(s);
	}
	return 0;
}
